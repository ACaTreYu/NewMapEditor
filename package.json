{
  "name": "ac-map-editor",
  "version": "1.2.0",
  "author": "Jacob Albert <ACaTreYu@protonmail.com>",
  "description": "Map Editor for Armor Critical",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "electron:dev": "vite",
    "electron:build": "vite build && electron-builder",
    "electron:build:win": "vite build && electron-builder --win",
    "electron:build:linux": "vite build && electron-builder --linux",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "electron-updater": "^6.7.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.5.0",
    "react-resizable-panels": "^4.5.7",
    "react-rnd": "^10.5.2",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.0",
    "electron": "^34.0.0",
    "electron-builder": "^25.1.8",
    "typescript": "^5.7.2",
    "vite": "^6.0.7",
    "vite-plugin-electron": "^0.28.8",
    "vite-plugin-electron-renderer": "^0.14.6",
    "wait-on": "^8.0.2"
  },
  "build": {
    "appId": "com.armorcritical.mapeditor",
    "productName": "AC Map Editor",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "icon": "build/icon.png",
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": true
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "deb",
      "icon": "build/icon.png",
      "category": "Graphics",
      "executableName": "ac-map-editor",
      "desktop": {
        "Name": "AC Map Editor",
        "Comment": "Tile map editor for Armor Critical",
        "Categories": "Graphics;2DGraphics;"
      }
    },
    "deb": {
      "artifactName": "ac-map-editor_${version}_${arch}.deb"
    },
    "extraResources": [
      { "from": "public/assets/patches", "to": "patches" }
    ],
    "afterPack": "./scripts/remove-sandbox.js",
    "publish": [
      {
        "provider": "github",
        "owner": "ACaTreYu",
        "repo": "NewMapEditor"
      }
    ]
  }
}
